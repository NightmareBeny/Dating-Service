@model IEnumerable<DatingService.Models.Client>

@{
    ViewData["Title"] = "Заинтересованные люди";
}


<h1>Люди, которым вы стали интересны</h1>
<hr />
<div>
    <table class="list">
        <thead>
            <tr>
                <th></th>
                <th>
                    @Html.DisplayNameFor(model => model.FIO)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Sign)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Age)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Height)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Weight)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Interests)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Note)
                </th>
                <th></th>
                <th width="2%"></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr class="down">
                    <td>
                        <img src="~/Images/@item.Image" alt="Фото профиля" />
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.FIO)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Sign)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Age)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Height)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Weight)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Interests)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Note)
                    </td>
                    <td>
                        <a asp-action="Details" asp-route-id="@item.Login" asp-route-idClient="@ViewBag.Id" class="btn btn-primary button">Подробная информация</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>
<div class="height">
    <a asp-action="Profile" asp-controller="Clients" asp-route-id="@ViewBag.Id" class="btn btn-primary">Вернуться в личный кабинет</a>
</div>
